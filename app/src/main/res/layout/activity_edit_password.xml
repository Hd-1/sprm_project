<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/big_margin"
    android:orientation="vertical"
    tools:context="profileController.EditPassword">

    <ImageButton
        android:id="@+id/edit_profile_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="@dimen/small_margin"
        android:contentDescription="@string/nav_back"
        android:src="@drawable/ic_arrow_back_24" />

    <ImageView
        android:id="@+id/profileImageEdit"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:src="@drawable/profile_password" />

    <EditText
        android:id="@+id/actualPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/small_margin"
        android:ems="15"
        android:hint="Actual Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:ems="15"
        android:hint="New Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/reTypeNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/big_margin"
        android:ems="15"
        android:hint="Confirm New Password"
        android:inputType="textPassword" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/big_margin"
        android:onClick="SaveNewPassword"
        android:text="Save" />

</LinearLayout>